{% extends "kd1BlogBundle::layout.html.twig" %}

{% block body %}
    <button type="button" id="logout" class="btn btn-sm btn-primary">Logout</button>
    <a href="{{ path('fos_user_security_logout') }}">LOGOUT</a>
    <div class="main-content container theme-showcase">
        <div class="kb-dst"><h1>Movie Database</h1><h2>All Movies</h2></div>

        <ul class="kb-list">
            <li><b>MovieName</b></li><br />
            {% for movie in movies %}
                <li><a href=" {{ path('kd1_blog_detailsMovie', {'key': movie.id } ) }}">{{ movie.name|e }}</></li>
            {% endfor %}
        </ul>

    </div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('bundles/sonatajquery/jquery-1.8.0.js') }}" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function() {
            $( "#logout" ).click(function() {
                //document.location.href="{{ path('kd1_blog_listMovies') }}";
                document.location.href="{{ path('fos_user_security_logout') }}";
                //document.location.href="http://localhost/sy/web/app_dev.php/movies";{{ path('fos_user_security_logout') }}
            });
        });
    </script>
{% endblock %}
